<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xuxianjing"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	
	<uses-permission android:name="android.permission.CAMERA" /> 
	<uses-feature android:name="android.hardware.camera" /> 
	<uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:name="com.example.xuxianjing.MyApplication"
        android:icon="@drawable/xuxianjing"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar"  >
        <activity
            android:name="com.example.xuxianjing.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.xuxianjing.activity.FirstActivity" ></activity>
        <activity android:name="com.example.xuxianjing.activity.RegisterActivity" ></activity>
        <activity android:name="com.example.xuxianjing.activity.MainActivity"></activity>
        <activity android:name="com.example.xuxianjing.activity.ImageLocalActivity"></activity>
        <activity android:name="com.example.xuxianjing.activity.FvMainActivity"></activity>
        <activity android:name="com.example.xuxianjing.activity.ImageActivity"
            	  android:theme="@style/translucent" ></activity>
        <activity android:name="com.example.xuxianjing.activity.SettingActivity" ></activity>
        <activity android:name="com.example.xuxianjing.activity.SendMessageActivity" ></activity>
        <activity android:name="com.example.xuxianjing.activity.ShareListActivity" ></activity>
        <activity android:name="com.example.xuxianjing.activity.BindPhoneActivity" ></activity>
    </application>

</manifest>
